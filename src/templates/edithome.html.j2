{% extends "parent.html.j2" %}
{% block head %}
    <title>Home</title>
{% endblock %}

{% block style %}
    <style>
        .form-group{
            margin-top: 18px
        }
    </style>
{% endblock %}

{% block content %}
<div style="margin-top: 3%;">
    <p style='text-align:center; color:#FF3062'> {{log}} </p>
    <div class="row">
      <form action="" method="POST" >
        <div class="col-md-12">
            <div class="container-fluid" id="atn">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6" id="sec-section">
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label for="name">Name of home</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="name" name="name" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label for="numroom">Number of rooms</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="numroom" name="numroom" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label for="numpeople">Number of people in the house</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="numpeople" name="numpeople" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label for="amenities">New amenities</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="amenities" name="amenities" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <h4 style='color: red; margin-top: 30px; margin-bottom: 0px'> Room Information</h4>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label for="price">Average price (Ghc)</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="price" name="price" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="desc">Description</label>
                                    <div class="input-group">
                                        <textarea class="form-control" id="desc" name="desc" placeholder=""></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">  
            <div class="col-sm-4"></div>
            <div class="col-sm-2" id="btn">
                <div class="form-group">
                    <div class="input-group">
                        <a class="submit-button" href="{{ url_for('index') }}" style="background-color: #FF3062; color: white; text-align: center; text-decoration: none;">Cancel</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-2" id="btn">
                <div class="form-group">
                    <div class="input-group">
                        <button type="submit" class="submit-button" style="background-color: #3DB249;" id="popUpYes">Update</button>
                    </div>
                </div>
            </div>
        </div>
      </form>
    </div>
</div>
{% endblock %}