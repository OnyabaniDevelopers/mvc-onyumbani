{% block style %}
<style>
  * {
    margin:0;
    padding:0;
  }
  
  html {
    scroll-behavior: smooth;
  }

  section {
    height:75vh;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
  }
  
  .section1 {
    background-image: linear-gradient(rgba(0, 0, 0, 0.62), rgba(0, 0, 0, 0.62) ), url("../assets/pics/family.jpg");
  }
  
  .section2 {
    background-image: url("https://images.unsplash.com/photo-1528731708534-816fe59f90cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80");
  }
  
  .section3 {
    background-image: url("https://images.unsplash.com/photo-1528731708534-816fe59f90cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80");
  }
  
  .section4 {
    background: #1e3c52;
  }
  
  .to-top {
    background: white;
    position: fixed;
    bottom: 16px;
    right:32px;
    width:50px;
    height:50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:32px;
    color:#1f1f1f;
    text-decoration: none;
    opacity:0;
    pointer-events: none;
    transition: all .4s;
  }
  
  .to-top.active {
    bottom:32px;
    pointer-events: auto;
    opacity:1;
  }
  #page-content {
    margin: 5%;
    font-size: 23px;
    color: #fff;
    font-weight: bold;
    }
  #page-contwnt2 {
    margin: 5%;
    font-size: 23px;
    color: #111111;
    font-weight: bold;
    }

    .custom-button {
      background-color: black;
      color: white;
      border: 2px solid white;
      border-radius: 40px;
      padding: 10px 20px;
      width: 40%;
      transition: background-color 0.3s, color 0.3s; /* Add transition effect for smooth animation */
    }
    
    .custom-button:hover {
      background-color: rgb(33, 33, 33);
      color: rgb(249, 249, 249);
    }

    body {
      background: #007bff;
      background: linear-gradient(to right, #0062E6, #33AEFF);
    }
    
    .bg-image {
      background-image: url('../assets/pics/transparent2.png');
      background-size: 50% auto; /* Adjust the percentage value as needed */
      background-position: center;
      background-repeat: no-repeat;
    }

    .social-link {
      width: 30px;
      height: 30px;
      border: 1px solid #ddd;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #666;
      border-radius: 50%;
      transition: all 0.3s;
      font-size: 0.9rem;
    }
    
    .social-link:hover,
    .social-link:focus {
      background: #ddd;
      text-decoration: none;
      color: #555;
    }

    @media (max-width: 767px) {
      @media only screen and (max-width: 767px) {
        /* Styles for mobile devices */
      
        /* Adjust the background image size */
        .section1 {
          background-size: cover;
        }
      
        /* Center align text in section 1 */
        .section1 .container {
          text-align: center;
        }
      
        /* Reduce the font size in section 1 */
        .section1 p {
          font-size: 18px;
        }
      
        /* Adjust the padding in section 2 */
        .section2 .container {
          padding: 20px;
        }
      
        /* Reduce the font size in section 2 */
        .section2 p {
          font-size: 16px;
        }
      
        /* Adjust the margin in section 3 */
        .section3 .container-fluid {
          margin: 0;
        }
      
        /* Adjust the padding in section 3 */
        .section3 .col-sm-6 {
          padding: 20px;
        }
      
        /* Reduce the font size in section 3 */
        .section3 p {
          font-size: 16px;
        }
        
        /* Center align the contact form */
        .section3 .card-body {
          text-align: center;
        }
      
        /* Reduce the font size in the contact form */
        .section3 .h3 {
          font-size: 24px;
        }
      
        /* Adjust the height of the message textarea */
        .section3 #message {
          height: 8rem;
        }
        
      }
    }
</style>

{% endblock %}

