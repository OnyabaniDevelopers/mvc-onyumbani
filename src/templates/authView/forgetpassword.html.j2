{% extends "parent.html.j2" %}

{% block content %}	
    <div class="row">
        <div class="col-12" id="ctnt">
            {% if msg1 %}
                <p style="color: {{color}}">{{ msg1 }}</p>
            {% endif %}
            <a class="navbar-brand" href="{{ url_for('index') }}">
                <img src="{{url_for('static', filename='pics/transparent2.png') }}" height="25%" style="margin: auto;">
            </a>
            <p style='text-align:center; color:{{color}}'> {{log}} </p>
            <div class="container-fluid" id="atn">
                <div class="row">
                    <div class="col-md-12">
                    <form action="{{ url_for('forgot_password') }}" method="POST" class="img-section">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="email">You will receive an reset link if email is registered</label>
                                        <div class="input-group">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-md-12 d-flex justify-content-center">
                            <button type="submit" class="login-button">RESET</button>
                        </div>
                    </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}