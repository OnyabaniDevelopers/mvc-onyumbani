{% extends "parent.html.j2" %}

{% block content %}	
    <div class="row">
        <div class="col-12" id="ctnt">
            {% if msg1 %}
                <p style="color: {{color}}">{{ msg1 }}</p>
            {% endif %}
            <a class="navbar-brand" href="{{ url_for('index') }}">
                <img src="{{url_for('static', filename='pics/transparent2.png') }}" height="25%" style="margin: auto;">
            </a>
            <p style='text-align:center; color:{{color}}'> {{log}} </p>
            <div class="container-fluid" id="atn">
                <div class="row">
                    <div class="col-md-12">
                    <form action="{{ url_for('login') }}" method="POST" class="img-section">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                        <div class="input-group">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                                        <div id="toggleBtn" onclick="togglePasswordVisibility()">
                                            <span id="slash" class="input-group-text password-toggle">
                                                <i class="fa fa-eye"></i>
                                            </span>
                                        </div>
                                        <!--<div class="input-group-append">
                                            <span class="input-group-text password-toggle">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                        </div>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="row" style='font-size: 14px'>
                        <div class="col-6">
                            <a href="{{ url_for('forgot_password') }}">Forget Password?</a>
                        </div>
                            <div class="login col-6">
                                <a href="{{ url_for('sign_up_one') }}">New here? Sign Up</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-center">
                                <button type="submit" class="login-button">LOGIN</button>
                            </div>
                        </div>
                    </form> 
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("password");
            var toggleButton = document.getElementById("toggleBtn");
            var slash = document.getElementById("slash");
        
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                slash.innerHTML = '<i class="fa fa-eye-slash"></i>'
                //toggleButton.textContent = "Hide";
            } else {
                passwordInput.type = "password";
                slash.innerHTML = '<i class="fa fa-eye"></i>'
                //toggleButton.textContent = "Show";
            }
        }
    </script>
{% endblock %}  