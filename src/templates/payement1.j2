{% extends "parent.html.j2" %}
{% block head %}
    <title>Home</title>
{% endblock %}


{% block style %}
  <style>
  body {
      font-family: 'Montserrat', sans-serif;
  }
  input[type="password"] {
    background-color: #D9D9D9;
  }
  input[type="text"], input[type="date"], input[type="email"] {
    background-color: #D9D9D9;
  }
  textarea[type="text"] {
    background-color: #D9D9D9;
  }
  .horizontal-list {
      list-style: none; /* Removes the default bullet points */
      padding: 0; /* Removes any default padding */
  }
  .horizontal-list li {
      display: inline-block; /* Displays the list items horizontally */
      margin-right: 10px; /* Adds some space between the list items */
  }
  .navbar {
      margin-bottom: 0;
      border-radius: 0;
      padding: 0px;
  }
  
  /* Hide the browser's default checkbox */
  .footer {
     position: fixed;
     left: 0;
     bottom: 0;
     width: 100%;
     background-color: #F6F6F6;
     color: black;
     text-align: center;
     padding: 0px;
  }
  
  #column-two{
    background-color: #F6F6F6;
  }
  
  #column-one {
    padding-left: 10%;
    padding-top: 2%;
  }
  .pink-button {
        background-color: #FF3062;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        margin-right: 5%;
      }
  .green-button {
      background-color: #3DB249;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      cursor: pointer;
  }
  </style>
{ endblock }

{% block content %}
    <div class="row">
      <div class="col-md-7" id="column-one" style="margin-bottom: 2%">
            <form>
                <div class="form-group">
                    <label for="name">Name on Sender Account</label>
                    <div class="input-group">
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="mode">Mode of Payment</label>
                    <div class="input-group">
                    <input type="text" class="form-control" id="mode" placeholder="Enter your mode">
                    </div>
                </div>
                <div class="form-group">
                    <label for="reference">Enter Payment Reference</label>
                    <div class="input-group">
                    <input type="text" class="form-control" id="reference" placeholder="Enter your reference">
                    </div>
                </div>
                <div class="form-group">
                    <label for="firstname">Date Of Birth</label>
                    <div class="input-group">
                    <input type="date" class="form-control" id="password" placeholder="Enter your firstname">

                    </div>
                </div>
                <div class="form-group">
                    <label for="reference">Enter Payment Reference</label>
                    <div class="input-group">
                    <input type="text" class="form-control" id="reference" placeholder="Enter your reference">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="textAreaExample">Any Additional Information</label>
                    <textarea class="form-control" type="text" id="textAreaExample1" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span style="margin-right: 10px;">Submit Proof here</span>
                      <span class="input-group-btn"><span class="btn btn-file"><span class="fa fa-upload"></span>
                        <input type="file" id="files" accept="image/png, image/jpeg, image/gif"/></span></span>
                        <div id="filepreview" ></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <button class="pink-button">Paid</button>
                        <button class="green-button">Cancel</button>    
                    </div>
                </div> 
            </form>
      </div>
      <div class="col-md-5" id="column-two" style="background-color: #203644;">
        <img src="../assets/pics/character.png" height="400" alt="MDB Logo" loading="lazy" style="position: fixed;">
      </div>
    </div>
{ endblock }
